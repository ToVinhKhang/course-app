extends ../layouts/layout

block content 
    //- loading
    #loading.loading
        .loading-overlay
        .spinner

    //- Header
    nav.navbar.navbar-expand-md.bg-white.navbar-white
        a(href='/')
            img#logo(src='/img/LKLlogo.png')
    br
    br
    br
    br

    //- Login Form
    <div class="container centroid">
      <div class="login-form" style="max-width: 400px">
        //- Button Back Home
        a(
          href="/"
          style="float: right"
          type="submit"
          class="btn btn-dark"
        ) Back

        //- Form
        div
            h2 Đăng nhập
            br
            div(class="form-group")
                input(
                    type="text"
                    onclick="ClearErrorMess()"
                    class="form-control"
                    id="username"
                    placeholder="Nhập tên tài khoản"
                    name="username"
                )
            div(class="form-group")
                input(
                    type="password"
                    onclick="ClearErrorMess()"
                    class="form-control"
                    id="pwd"
                    placeholder="Nhập mật khẩu"
                    name="pwd"
                )
            p(id="ErrorMess")
            div
                p Chưa có tài khoản? 
                    a(href="/auth/register") Tạo ngay
            button(
                onclick="handleLogin()"
                type="submit"
                class="btn btn-primary width100Percent"
            ) Đăng nhập