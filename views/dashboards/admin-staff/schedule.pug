extends ../../layouts/layout

block content
    //- DataView
    div(class="container-fluid")
        div(class="row")
            //- Menu
            div(class="col-sm-3 col-md-3 col-lg-3 col-xl-3")
                nav(class="navbar navbar-light" style="padding-top: 0px;")
                    ul(class="navbar-nav nav nav-pills" )
                        div(style="border-style: ridge; border-radius: 10px;")
                            br
                            img(src="/img/ava3.png" style="border-radius: 50%; height: 50%; width: 50%; display: block; margin-left: auto; margin-right: auto;")
                            li(class="nav-item")

                            if user
                                p(class="nav-link" style="text-align: center;") #{user.fullname}
                                
                        br
                        li(class="nav-item")
                            a(class="nav-link" href="/dashboard/admin") Quản lý thông báo
                        div(class="dropdown-divider")
                        li(class="nav-item")
                            a(class="nav-link" href="/dashboard/admin/course") Quản lý khóa học
                        div(class="dropdown-divider")
                        li(class="nav-item active")
                            a(class="nav-link" href="#") Quản lý lịch học và thi
                        div(class="dropdown-divider")
                        li(class="nav-item")
                            a(class="nav-link" href="/dashboard/admin/student") Quản lý học viên
                        div(class="dropdown-divider")
                        li(class="nav-item")
                            a(class="nav-link" href="/dashboard/admin/teacher") Quản lý giảng viên
                        div(class="dropdown-divider")
                        li(class="nav-item")
                            a(class="nav-link" href="/") Về trang chủ
                        div(class="dropdown-divider")
                        li(class="nav-item")
                            a(class="nav-link" href="#" id="logoutButton") Đăng xuất
                        div(class="dropdown-divider")

            //- DataGridView
            div(class="col-sm-9 col-md-9 col-lg-9 col-xl-9")
                div(class="container-fluid")
                    div(class="row")
                        div(class="col-md-12")
                            h4
                                img(src="/img/studySchedule_icon.png" width="40" height="40" alt="folder icon")
                                span &nbsp;&nbsp;Quản lý lịch học
                            //- Learning Schedule Info
                            span(class="l-btn noselect" id="addLearningSchedule") Thêm lịch học
                            table(id="MyTable" class="table table-hover")
                                thead
                                    tr
                                        th Tên khóa học
                                        th Phòng
                                        th Ngày
                                        th Thời gian
                                        th Giảng viên
                                        th Điều khiển

                                tbody(id="learningScheduleList")
                                    if learningSchedules
                                        each learningSchedule in learningSchedules
                                            tr(id=learningSchedule.learningScheduleId)
                                                td= learningSchedule.courseName
                                                td= learningSchedule.room
                                                td= learningSchedule.date
                                                td= learningSchedule.time
                                                td= learningSchedule.teacherName
                                                td(class="d-flex")
                                                    button(type="button" class="btn btn-outline-primary editLearningSchedule" data-learningScheduleId=learningSchedule.learningScheduleId) Cập nhật
                                                    button(type="button" class="ml-2 btn btn-outline-danger deleteLearningSchedule" data-learningScheduleId=learningSchedule.learningScheduleId) Xóa

                            br
                            br
                            br

                        div(class="col-md-12")
                            h4
                                img(
                                    src="/img/examSchedule_icon.png"
                                    width="40"
                                    height="40"
                                    alt="folder icon"
                                ) 
                                span &nbsp;&nbsp;Quản lý lịch thi
                            //- Exam Schedule Info
                            span(class="l-btn noselect" id="addExamSchedule") Thêm lịch thi
                            table(id="MyTable" class="table table-hover")
                                thead
                                    tr
                                        th Tên khóa học
                                        th Phòng thi
                                        th Ngày thi
                                        th Thời gian
                                        th Điều khiển

                                tbody(id="examScheduleList")
                                    if examSchedules
                                        each examSchedule in examSchedules
                                            tr(id=examSchedule.examScheduleId)
                                                td= examSchedule.courseName
                                                td= examSchedule.examRoom
                                                td= examSchedule.examDate
                                                td= examSchedule.examTime
                                                td(class="d-flex")
                                                    button(type="button" class="btn btn-outline-success viewExamSchedule" data-examScheduleId=examSchedule.examScheduleId) Chi tiết
                                                    button(type="button" class="ml-2 btn btn-outline-primary editExamSchedule" data-examScheduleId=examSchedule.examScheduleId) Cập nhật
                                                    button(type="button" class="ml-2 btn btn-outline-danger deleteExamSchedule" data-examScheduleId=examSchedule.examScheduleId) Xóa
    
    br
    br
    br
    br

    //- Footer
    #footer.centroid
        .container-fluid.pt-2
            .row
                .col-md-4.d-flex.justify-content-center.mb-4
                    //- Map Picture
                    img(src='/img/map.png', width='300', heigh='300')
                .col-md-8.d-flex.align-items-center
                    //- Info Footer
                    div
                        p Nhóm phát triển phần mềm KKL Edu
                        p 19 Nguyễn Hữu Thọ, Tân Phong, Q7, TPHCM
                        p Hotline: (+84) 0987654321
                        p Email: kklsupport@gmail.com
                        p Copyright © 2020 by KKL Edu

                        //- Some Other Media
                        span(style="font-size: 2.5rem" class="mr-3")
                            i(class="fab fa-facebook")
                        span(style="font-size: 2.5rem" class="mr-3")
                            i(class="fab fa-twitter-square")
                        span(style="font-size: 2.5rem")
                            i(class="fab fa-instagram-square")
            .row
                .col-md-12
                    //- Product Footer
                    div(class="d-flex justify-content-end flex-column align-items-end")
                        p
                            img(src='https://kichi.ggg.com.vn/wp-content/uploads/2018/10/bct.png')
                        p Producted by KKL Software Team.
